Dialogue: 0,1:07:52.45,1:07:55.05,Default,,0,0,0,,<FONT COLOR="#3AE7D3">XÓA VĨNH VIỄN KHỎI THÙNG RÁC
Dialogue: 0,1:08:04.21,1:08:05.81,Default,,0,0,0,,- Peterson!\N- Bác Sandborn!
Dialogue: 0,1:08:05.98,1:08:08.82,Default,,0,0,0,,- Cháu làm bác sợ quá đấy.\N- Cháu xin lỗi.
Dialogue: 0,1:08:09.05,1:08:11.15,Default,,0,0,0,,Cháu đang làm gì ở đây thế?\NChúa ơi.
Dialogue: 0,1:08:11.32,1:08:12.56,Default,,0,0,0,,Cháu xin lỗi.
Dialogue: 0,1:08:15.69,1:08:17.03,Default,,0,0,0,,{\i1}Hãy nói là cậu đã về nhà,{\i0}
Dialogue: 0,1:08:17.09,1:08:18.23,Default,,0,0,0,,{\i1}và khóa toàn bộ cửa đi.{\i0}
Dialogue: 0,1:08:18.39,1:08:19.66,Default,,0,0,0,,Ừ.
Dialogue: 0,1:08:19.76,1:08:23.23,Default,,0,0,0,,Tớ đã tìm thấy cái máy tính\Nvà xóa hết mọi tập tin rồi.
Dialogue: 0,1:08:23.33,1:08:25.00,Default,,0,0,0,,{\i1}Tốt. Tốt.{\i0}
Dialogue: 0,1:08:25.06,1:08:27.17,Default,,0,0,0,,Nhưng tớ còn tìm thấy\Nmột thứ đáng sợ hơn nhiều.
Dialogue: 0,1:08:27.23,1:08:29.40,Default,,0,0,0,,{\i1}Sao tớ không thấy ngạc nhiên nhỉ?\NNó là thằng khùng mà.{\i0}
Dialogue: 0,1:08:29.50,1:08:31.88,Default,,0,0,0,,Ethan có quen biết cảnh sát nào\Nở San Bernardino không?
Dialogue: 0,1:08:31.94,1:08:33.24,Default,,0,0,0,,Tớ chắc là có đấy.
Dialogue: 0,1:08:33.34,1:08:34.61,Default,,0,0,0,,Nếu bọn tớ không ăn tối với mẹ anh ấy,
Dialogue: 0,1:08:34.71,1:08:36.12,Default,,0,0,0,,thì lúc nào cũng ăn tối với bọn cảnh sát.
Dialogue: 0,1:08:36.21,1:08:37.35,Default,,0,0,0,,Sao thế?
Dialogue: 0,1:08:37.84,1:08:39.34,Default,,0,0,0,,Chỉ là linh cảm thôi.
Dialogue: 0,1:08:40.51,1:08:42.75,Default,,0,0,0,,Lát nữa tớ sẽ đến nhà cậu và gọi cho anh ấy.
Dialogue: 0,1:08:42.85,1:08:44.38,Default,,0,0,0,,Anh ấy đã đến Laughlin với mẹ...
Dialogue: 0,1:08:44.52,1:08:46.26,Default,,0,0,0,,nhân dịp sinh nhật bà ấy rồi.\NChào mừng đến với thế giới của tớ.
Dialogue: 0,1:08:46.35,1:08:47.69,Default,,0,0,0,,Nhưng nghe này...
Dialogue: 0,1:08:48.52,1:08:49.93,Default,,0,0,0,,{\i1}- Gì thế?{\i0}\N- Cậu ta đang ở đây!
Dialogue: 0,1:08:50.02,1:08:51.26,Default,,0,0,0,,Rời khỏi đó nhanh lên! Chạy đi!
Dialogue: 0,1:08:52.36,1:08:53.70,Default,,0,0,0,,{\i1}Claire! Claire!{\i0}
Dialogue: 0,1:08:54.36,1:08:55.36,Default,,0,0,0,,{\i1}Tớ gọi cảnh sát đây!{\i0}
Dialogue: 0,1:08:57.43,1:08:59.37,Default,,0,0,0,,{\i1}- Nói gì đi, Claire! Tớ lo muốn chết đây!{\i0}\N- Cậu ta đang cố phá khóa!
Dialogue: 0,1:08:59.53,1:09:00.53,Default,,0,0,0,,{\i1}Gì cơ?{\i0}
Dialogue: 0,1:09:00.70,1:09:02.23,Default,,0,0,0,,{\i1}Ôi Chúa ơi!{\i0}
Dialogue: 0,1:09:03.87,1:09:05.07,Default,,0,0,0,,{\i1}Chạy đi, trốn nhanh lên!{\i0}
Dialogue: 0,1:09:09.31,1:09:11.22,Default,,0,0,0,,Chào mẹ, cầm dao chi ghê vậy?
Dialogue: 0,1:09:11.38,1:09:12.45,Default,,0,0,0,,Là Kevin.
Dialogue: 0,1:09:12.51,1:09:13.71,Default,,0,0,0,,Ôi Chúa ơi!
Dialogue: 0,1:09:13.88,1:09:14.91,Default,,0,0,0,,Tớ phát điên mất!
Dialogue: 0,1:09:15.08,1:09:18.32,Default,,0,0,0,,{\i1}Hai mẹ con đêm nay phải đến\Nchỗ tớ ngay, được chứ?{\i0}
Dialogue: 0,1:09:18.42,1:09:20.29,Default,,0,0,0,,{\i1}Ôi Chúa ơi. Yêu cậu nhiều.{\i0}
Dialogue: 0,1:09:20.62,1:09:22.39,Default,,0,0,0,,Nói chuyện với cậu sau nhé.
Dialogue: 0,1:09:35.63,1:09:37.98,Default,,0,0,0,,Ethan, uh, bảo cô muốn xem qua\Nvụ của gia đình Sandborn.
Dialogue: 0,1:09:38.07,1:09:39.10,Default,,0,0,0,,Vâng.
Dialogue: 0,1:09:39.17,1:09:40.44,Default,,0,0,0,,Thật đáng buồn.\NTôi vẫn còn nhớ rõ mà.
Dialogue: 0,1:09:41.41,1:09:44.41,Default,,0,0,0,,{\i1}Họ đang ở một con đường lộ\Nngoại ô San Bernardino.{\i0}
Dialogue: 0,1:09:45.24,1:09:48.19,Default,,0,0,0,,{\i1}Dấu vết của 4 bánh cho thấy\Nhọ đã mất kiểm soát chiếc xe.{\i0}
Dialogue: 0,1:10:00.79,1:10:02.93,Default,,0,0,0,,Xe bị đâm và giết chết cả hai người ngay lập tức.
Dialogue: 0,1:10:02.99,1:10:04.84,Default,,0,0,0,,Và họ tuyên bố đó là một vụ tai nạn à?
Dialogue: 0,1:10:04.93,1:10:06.89,Default,,0,0,0,,Thi thể đã bị hủy hoại,\Nnên không khám nghiệm tử thi được.
Dialogue: 0,1:10:06.93,1:10:08.81,Default,,0,0,0,,Nhưng chúng tôi cho rằng\Nngười lái xe đang say xỉn.
Dialogue: 0,1:10:09.00,1:10:10.54,Default,,0,0,0,,Tại sao lại thế?
Dialogue: 0,1:10:10.77,1:10:12.84,Default,,0,0,0,,Anh ta bị phạt vì lái xe\Nkhi uống rượu nhiều lần lắm rồi.
Dialogue: 0,1:10:13.00,1:10:16.61,Default,,0,0,0,,Hoặc có thể là do phanh hỏng.\NBiết đâu đã bị ai đó phá.
Dialogue: 0,1:10:16.77,1:10:19.62,Default,,0,0,0,,Cô Peterson,\Nthậm chí nếu phanh của họ hỏng,
Dialogue: 0,1:10:19.68,1:10:22.06,Default,,0,0,0,,thì cũng không có dấu hiệu\Ncho thấy những hành vi phi pháp.
Dialogue: 0,1:10:22.15,1:10:24.13,Default,,0,0,0,,Đôi khi cũng có sự cố mà.
Dialogue: 0,1:10:24.13,1:10:26.45,Default,,0,0,0,,Đôi lúc người ta vẫn lái xe\Nkhi đang say xỉn.
Dialogue: 0,1:10:26.62,1:10:27.89,Default,,0,0,0,,Đây là xe của gia đình Sandborn.
Dialogue: 0,1:10:35.46,1:10:37.17,Default,,0,0,0,,Nếu cô không cần điều gì nữa...
Dialogue: 0,1:10:38.96,1:10:41.47,Default,,0,0,0,,Một câu hỏi nữa, thưa Thanh Tra.\NUm...
Dialogue: 0,1:10:43.50,1:10:45.81,Default,,0,0,0,,Đây có phải là loại xe Minivan 2006 không?
Dialogue: 0,1:10:45.97,1:10:49.47,Default,,0,0,0,,Đúng thế. Chính xác rồi.
Dialogue: 0,1:10:49.64,1:10:53.21,Default,,0,0,0,,Có điều gì khác mà tôi\Ncần phải biết không, cô Peterson?
Dialogue: 0,1:10:56.21,1:10:57.39,Default,,0,0,0,,Không.
Dialogue: 0,1:11:00.89,1:11:02.16,Default,,0,0,0,,Cảm ơn anh.
Dialogue: 0,1:11:19.24,1:11:20.51,Default,,0,0,0,,- Chào, Noah.\N- Em có nhà không?
Dialogue: 0,1:11:20.57,1:11:21.68,Default,,0,0,0,,Có, chuyện gì thế anh?
Dialogue: 0,1:11:21.74,1:11:23.08,Default,,0,0,0,,Đêm nay em có kế hoạch gì chưa?
Dialogue: 0,1:11:23.17,1:11:25.29,Default,,0,0,0,,Em định đến xem triển lãm xe với bố.
Dialogue: 0,1:11:25.34,1:11:27.19,Default,,0,0,0,,{\i1}Anh đang sửa xe đầu kéo cho cô Vicky.{\i0}
Dialogue: 0,1:11:27.24,1:11:28.35,Default,,0,0,0,,Anh đang ở nhà cô Vicky sao?
Dialogue: 0,1:11:28.41,1:11:30.19,Default,,0,0,0,,Ừ. Anh đang ở trang trại nhà cô ấy.\NEm biết chỗ đó chứ?
Dialogue: 0,1:11:30.25,1:11:32.35,Default,,0,0,0,,Vâng, em nghĩ là em biết.
Dialogue: 0,1:11:32.42,1:11:33.52,Default,,0,0,0,,Mọi chuyện ổn cả chứ?
Dialogue: 0,1:11:33.58,1:11:35.50,Default,,0,0,0,,Em và bố em có thể\Nghé qua giúp anh một tay được không?
Dialogue: 0,1:11:35.55,1:11:36.86,Default,,0,0,0,,Vâng, để em hỏi bố thử.
Dialogue: 0,1:11:36.92,1:11:38.13,Default,,0,0,0,,{\i1}Hãy đến ngay nhé.{\i0}
Dialogue: 0,1:11:38.22,1:11:40.07,Default,,0,0,0,,Được rồi. Gặp anh sau. Tạm biệt.
Dialogue: 0,1:11:43.96,1:11:46.37,Default,,0,0,0,,Hãy để tôi bắt đầu bằng câu tôi xin lỗi.
Dialogue: 0,1:11:47.23,1:11:51.20,Default,,0,0,0,,Không, tôi thật lòng...
Dialogue: 0,1:11:52.14,1:11:54.98,Default,,0,0,0,,thật lòng xin lỗi Hiệu Phó Lansing.
Dialogue: 0,1:11:56.11,1:11:59.28,Default,,0,0,0,,Cô thấy đấy, tôi có hơi nóng tính.
Dialogue: 0,1:11:59.91,1:12:01.62,Default,,0,0,0,,Đó là sự thật không thể chối bỏ.
Dialogue: 0,1:12:03.05,1:12:04.92,Default,,0,0,0,,Và đôi lúc,
Dialogue: 0,1:12:05.25,1:12:07.13,Default,,0,0,0,,nó khiến tôi mất kiểm soát.
Dialogue: 0,1:12:07.79,1:12:10.73,Default,,0,0,0,,Vào những lúc tôi cảm thấy như\Nmình đang bị bắt nạt ấy.
Dialogue: 0,1:12:11.09,1:12:13.47,Default,,0,0,0,,Và không ai thích bị bắt nạt cả, Vicky.
Dialogue: 0,1:12:14.16,1:12:16.00,Default,,0,0,0,,Tôi gọi cô là Vicky được chứ?
Dialogue: 0,1:12:16.73,1:12:18.67,Default,,0,0,0,,Ý tôi là dựa vào việc\Ntôi đang ở nhà cô,
Dialogue: 0,1:12:18.76,1:12:20.40,Default,,0,0,0,,và không phải trong giờ hành chính,
Dialogue: 0,1:12:21.00,1:12:23.00,Default,,0,0,0,,gọi cô là Hiệu Phó thì có chút,
Dialogue: 0,1:12:23.43,1:12:26.42,Default,,0,0,0,,tôi không biết nữa, sai trái.
Dialogue: 0,1:12:30.84,1:12:32.91,Default,,0,0,0,,Thấy chứ, tôi đoán là, Vicky,
Dialogue: 0,1:12:33.18,1:12:36.12,Default,,0,0,0,,cô không thích bị bắt nạt.
Dialogue: 0,1:12:36.81,1:12:38.66,Default,,0,0,0,,Ý tôi là, làm gì có ai thích chứ?
Dialogue: 0,1:12:40.75,1:12:43.03,Default,,0,0,0,,Nhưng đó chính là điều\Nmà cô đã làm với tôi hôm nay.
Dialogue: 0,1:12:44.59,1:12:46.09,Default,,0,0,0,,Cô và Claire.
Dialogue: 0,1:12:46.42,1:12:47.70,Default,,0,0,0,,Hai người các cô,
Dialogue: 0,1:12:48.16,1:12:51.16,Default,,0,0,0,,với mấy cái bí mật thì thầm to nhỏ.
Dialogue: 0,1:12:53.20,1:12:54.87,Default,,0,0,0,,Hai người đã lập ra một trò đùa.
Dialogue: 0,1:12:54.97,1:12:57.28,Default,,0,0,0,,Một trò chơi ngốc nghếch.
Dialogue: 0,1:12:57.97,1:13:00.81,Default,,0,0,0,,Cố gắng khiến tôi nghĩ rằng\Ncô là cô ấy...
Dialogue: 0,1:13:02.47,1:13:04.68,Default,,0,0,0,,để cô ấy có thể làm gì thế?
Dialogue: 0,1:13:09.98,1:13:12.15,Default,,0,0,0,,Một chuyện lén lút mờ ám à?
Dialogue: 0,1:13:13.65,1:13:15.65,Default,,0,0,0,,Một chuyện mà...
Dialogue: 0,1:13:17.69,1:13:20.00,Default,,0,0,0,,cô ấy đang che giấu tôi?
Dialogue: 0,1:13:20.86,1:13:22.50,Default,,0,0,0,,Là chuyện gì thế, Vicky?
Dialogue: 0,1:13:27.46,1:13:28.81,Default,,0,0,0,,Không, không, không.
Dialogue: 0,1:13:29.83,1:13:31.24,Default,,0,0,0,,Để tôi.
Dialogue: 0,1:13:35.31,1:13:36.38,Default,,0,0,0,,Vicky!
Dialogue: 0,1:13:36.47,1:13:38.42,Default,,0,0,0,,Nghe này, tớ khá chắc chắn...
Dialogue: 0,1:13:38.51,1:13:41.15,Default,,0,0,0,,là Noah đã phá hệ thống phanh\Ntrong xe của bố mẹ cậu ta...
Dialogue: 0,1:13:41.21,1:13:42.49,Default,,0,0,0,,và đó là lý do họ bị tai nạn.
Dialogue: 0,1:13:43.31,1:13:45.99,Default,,0,0,0,,Và tớ chắc là cậu ta\Ncũng đã làm thế với xe của Garrett.
Dialogue: 0,1:13:46.05,1:13:48.39,Default,,0,0,0,,Claire, tớ cần cậu.
Dialogue: 0,1:13:48.39,1:13:50.76,Default,,0,0,0,,Tớ cần nói chuyện. Cậu đến đây được không?
Dialogue: 0,1:14:22.02,1:14:23.52,Default,,0,0,0,,Vicky?
Dialogue: 0,1:14:46.74,1:14:49.82,Default,,0,0,0,,Vicky! Cậu ở trên lầu à?
Dialogue: 0,1:15:02.59,1:15:03.80,Default,,0,0,0,,Vicky?
Dialogue: 0,1:15:11.14,1:15:12.17,Default,,0,0,0,,Vicky.
Dialogue: 0,1:15:33.09,1:15:34.59,Default,,0,0,0,,Ôi Chúa ơi!
Dialogue: 0,1:15:38.80,1:15:41.30,Default,,0,0,0,,Ôi Chúa ơi!\NÔi Chúa ơi!
Dialogue: 0,1:16:02.62,1:16:04.12,Default,,0,0,0,,{\i1}911 nghe đây.\NTrường hợp khẩn cấp của bạn là gì?{\i0}
Dialogue: 0,1:16:04.32,1:16:05.96,Default,,0,0,0,,Ra ngoài ngay!
Dialogue: 0,1:16:06.72,1:16:08.97,Default,,0,0,0,,Ôi Chúa ơi!\NÔi Chúa ơi!
Dialogue: 0,1:16:13.00,1:16:14.41,Default,,0,0,0,,Mày đã giết Vicky!
Dialogue: 0,1:16:14.50,1:16:17.81,Default,,0,0,0,,Vì em. Đều là vì em cả, được chứ?\NMụ ta không phải bạn em, Claire!
Dialogue: 0,1:16:17.97,1:16:19.54,Default,,0,0,0,,Này, này, này!
Dialogue: 0,1:16:20.00,1:16:22.48,Default,,0,0,0,,Khi anh yêu ai đó,\Nanh sẽ bảo vệ họ.
Dialogue: 0,1:16:22.54,1:16:24.52,Default,,0,0,0,,Đó là điều mà những người hùng sẽ làm.
Dialogue: 0,1:16:24.81,1:16:27.55,Default,,0,0,0,,Không người hùng nào giết bố mẹ mình cả!
Dialogue: 0,1:16:27.55,1:16:32.06,Default,,0,0,0,,Anh sẽ không bao giờ làm hại mẹ mình.
Dialogue: 0,1:16:32.48,1:16:34.19,Default,,0,0,0,,Anh rất yêu mẹ,
Dialogue: 0,1:16:34.39,1:16:35.83,Default,,0,0,0,,nhưng bà ấy đã tự sát.
Dialogue: 0,1:16:38.76,1:16:41.50,Default,,0,0,0,,Ông bố phản bội của anh\Nvà con điếm của ông ta...
Dialogue: 0,1:16:41.66,1:16:43.10,Default,,0,0,0,,đã nhận hậu quả thích đáng.
Dialogue: 0,1:16:43.19,1:16:44.33,Default,,0,0,0,,Nhưng này.
Dialogue: 0,1:16:45.33,1:16:47.74,Default,,0,0,0,,Anh luôn bảo vệ người mà anh yêu.
Dialogue: 0,1:16:47.83,1:16:50.21,Default,,0,0,0,,Mọi chuyện anh làm đều là vì em cả.
Dialogue: 0,1:16:50.27,1:16:51.44,Default,,0,0,0,,Được chứ?
Dialogue: 0,1:16:54.17,1:16:55.17,Default,,0,0,0,,Không!
Dialogue: 0,1:16:57.21,1:16:58.74,Default,,0,0,0,,Giờ thì, đi thôi.
Dialogue: 0,1:17:13.89,1:17:14.96,Default,,0,0,0,,Garrett!
Dialogue: 0,1:17:16.09,1:17:17.20,Default,,0,0,0,,Garrett!
Dialogue: 0,1:17:19.46,1:17:22.14,Default,,0,0,0,,Ôi Chúa ơi!\NMày đã làm gì với anh ấy rồi?
Dialogue: 0,1:17:22.57,1:17:25.45,Default,,0,0,0,,Ông ta bị một cái cờ lê\N36cm đập vào mặt.
Dialogue: 0,1:17:25.64,1:17:26.77,Default,,0,0,0,,Mẹ ơi!
Dialogue: 0,1:17:27.44,1:17:28.58,Default,,0,0,0,,Kevin!
Dialogue: 0,1:17:29.61,1:17:31.71,Default,,0,0,0,,Noah, mày mà làm hại mẹ tao,\Ntao thề có Chúa...
Dialogue: 0,1:17:31.78,1:17:32.78,Default,,0,0,0,,Thật sao, Kevin?
Dialogue: 0,1:17:32.88,1:17:34.58,Default,,0,0,0,,Anh sẽ không bao giờ làm hại mẹ em cả.
Dialogue: 0,1:17:35.75,1:17:36.75,Default,,0,0,0,,Anh yêu mẹ em.
Dialogue: 0,1:17:37.21,1:17:38.63,Default,,0,0,0,,Cứ hít thở đều đi, con yêu!
Dialogue: 0,1:17:39.22,1:17:41.56,Default,,0,0,0,,Và thật ra thì, anh hy vọng\Nem nhìn nhận anh như là...
Dialogue: 0,1:17:41.62,1:17:43.33,Default,,0,0,0,,một người đi trước quan tâm đến em...
Dialogue: 0,1:17:43.42,1:17:47.80,Default,,0,0,0,,hơn lão bố phản bội của em rất nhiều.
Dialogue: 0,1:17:49.09,1:17:50.26,Default,,0,0,0,,Cho em ấy biết đi, Claire.
Dialogue: 0,1:17:50.43,1:17:51.72,Default,,0,0,0,,Con cần tiêm một mũi không?
Dialogue: 0,1:17:51.72,1:17:52.73,Default,,0,0,0,,Mẹ.
Dialogue: 0,1:17:53.00,1:17:54.94,Default,,0,0,0,,Em biết đấy, đó là số mệnh mà Claire.
Dialogue: 0,1:17:55.00,1:17:56.74,Default,,0,0,0,,Và anh thì không thể chống lại số mệnh được.
Dialogue: 0,1:17:57.07,1:17:58.14,Default,,0,0,0,,Mẹ.
Dialogue: 0,1:18:05.58,1:18:07.45,Default,,0,0,0,,Chúng ta sinh ra là để dành cho nhau.
Dialogue: 0,1:18:07.58,1:18:09.11,Default,,0,0,0,,Và Garrett...
Dialogue: 0,1:18:10.91,1:18:12.42,Default,,0,0,0,,cần phải được biết điều đó.
Dialogue: 0,1:18:12.48,1:18:14.62,Default,,0,0,0,,Tỉnh lại! Này, tỉnh lại nhanh lên!
Dialogue: 0,1:18:22.46,1:18:23.63,Default,,0,0,0,,Rồi mọi chuyện sẽ ổn cả thôi.
Dialogue: 0,1:18:24.96,1:18:27.14,Default,,0,0,0,,Em biết không, anh định đưa\NKevin đi cùng chúng ta.
Dialogue: 0,1:18:28.70,1:18:31.37,Default,,0,0,0,,Nhưng có vẻ như nó đã bị ảnh hưởng\Ntừ ông bố mình quá nhiều rồi.
Dialogue: 0,1:18:31.47,1:18:32.61,Default,,0,0,0,,Không, anh phải xử nó luôn.
Dialogue: 0,1:18:32.97,1:18:34.11,Default,,0,0,0,,Không! Không, không, không.
Dialogue: 0,1:18:35.00,1:18:37.44,Default,,0,0,0,,Không, thằng bé không hề giống bố nó.
Dialogue: 0,1:18:38.56,1:18:43.12,Default,,0,0,0,,Noah, cậu đã dạy dỗ nó và thay đổi nó.
Dialogue: 0,1:18:50.15,1:18:51.53,Default,,0,0,0,,Được rồi.
Dialogue: 0,1:18:51.86,1:18:53.16,Default,,0,0,0,,Được rồi, vậy thì, uh...
Dialogue: 0,1:18:54.29,1:18:56.33,Default,,0,0,0,,- Nó sẽ đi cùng anh và em.\N- Ừ.
Dialogue: 0,1:18:58.30,1:18:59.97,Default,,0,0,0,,Và tạo dựng một gia đình mới của riêng chúng ta.
Dialogue: 0,1:19:14.48,1:19:15.48,Default,,0,0,0,,Mẹ! Mẹ!
Dialogue: 0,1:19:32.86,1:19:34.00,Default,,0,0,0,,Làm ơn đi, Noah!
Dialogue: 0,1:19:34.06,1:19:35.91,Default,,0,0,0,,Làm ơn hãy ngừng lại!\NHãy để tôi giúp cậu.
Dialogue: 0,1:19:36.00,1:19:37.57,Default,,0,0,0,,Vẫn còn thời gian mà.
Dialogue: 0,1:19:37.67,1:19:40.17,Default,,0,0,0,,Chả còn thời gian đâu.\NĐây là thời khắc của chúng ta.
Dialogue: 0,1:19:40.17,1:19:42.84,Default,,0,0,0,,Em sẽ không bao giờ\Nxinh đẹp hơn lúc này cả!
Dialogue: 0,1:19:43.24,1:19:46.22,Default,,0,0,0,,Và chúng ta sẽ mãi mãi không trở về đây nữa!
Dialogue: 0,1:20:05.53,1:20:06.53,Default,,0,0,0,,Cậu đang làm gì thế?
Dialogue: 0,1:20:06.90,1:20:09.61,Default,,0,0,0,,Chuẩn bị giàn thiêu.\NEm thấy trông nó giống thứ gì chứ?
Dialogue: 0,1:20:13.20,1:20:14.71,Default,,0,0,0,,Cậu không thể làm thế được!
Dialogue: 0,1:20:15.24,1:20:16.55,Default,,0,0,0,,- Không!\N- Thôi đi!
Dialogue: 0,1:20:19.08,1:20:21.08,Default,,0,0,0,,Anh phát ốm và mệt mỏi vì người ta...
Dialogue: 0,1:20:21.14,1:20:22.95,Default,,0,0,0,,cứ lấp la lấp lửng rồi!
Dialogue: 0,1:20:23.05,1:20:24.92,Default,,0,0,0,,Nên đã lúc để em lựa chọn, em yêu à!
Dialogue: 0,1:20:25.18,1:20:28.39,Default,,0,0,0,,Hoặc là em sống với anh\Nhoặc là chết cùng bọn chúng.
Dialogue: 0,1:20:28.45,1:20:30.43,Default,,0,0,0,,Không! Không!
Dialogue: 0,1:20:58.92,1:21:00.60,Default,,0,0,0,,Cứu Kevin và rời khỏi đây đi!
Dialogue: 0,1:21:05.26,1:21:07.13,Default,,0,0,0,,Không! Không!
Dialogue: 0,1:21:08.86,1:21:11.43,Default,,0,0,0,,Ôi Chúa ơi!\NÔi Chúa ơi!
Dialogue: 0,1:21:12.26,1:21:15.30,Default,,0,0,0,,Ôi Chúa ơi! Ở lại với em, Garrett!
Dialogue: 0,1:21:15.67,1:21:18.67,Default,,0,0,0,,Garrett, cố tỉnh táo đi nào!\NHãy ở lại với em!
Dialogue: 0,1:21:18.77,1:21:21.44,Default,,0,0,0,,Được rồi. Đi thôi, Claire.
Dialogue: 0,1:21:23.27,1:21:27.02,Default,,0,0,0,,Rồi em sẽ thấy. Chỉ em và anh.\NBắt đầu ở một nơi khác.
Dialogue: 0,1:21:28.51,1:21:30.65,Default,,0,0,0,,Không có điều gì mà anh\Nkhông làm vì em cả.
Dialogue: 0,1:21:36.12,1:21:37.96,Default,,0,0,0,,Em có thể tin anh mà.
Dialogue: 0,1:21:38.72,1:21:39.72,Default,,0,0,0,,Nhưng, Noah,
Dialogue: 0,1:21:40.86,1:21:42.03,Default,,0,0,0,,mày không thể tin tao được!
Dialogue: 0,1:22:01.04,1:22:03.48,Default,,0,0,0,,- Chết đi! Thằng chó khốn nạn!\N- Không!
Dialogue: 0,1:22:25.20,1:22:26.20,Default,,0,0,0,,Ahh!
Dialogue: 0,1:22:54.57,1:22:58.61,Default,,0,0,0,,Xin lỗi nhóc, nhưng đôi khi\Nthậm chí đến người hùng...
Dialogue: 0,1:22:58.70,1:23:00.05,Default,,0,0,0,,cũng phải đưa ra những\Nsự lựa chọn khó khăn mà.
Dialogue: 0,1:23:00.10,1:23:01.10,Default,,0,0,0,,Noah!
Dialogue: 0,1:23:02.37,1:23:04.05,Default,,0,0,0,,Noah! Noah!
Dialogue: 0,1:23:05.88,1:23:07.38,Default,,0,0,0,,Mày không phải là người hùng!
Dialogue: 0,1:23:38.58,1:23:41.15,Default,,0,0,0,,Em đây. Có em đây.
Dialogue: 0,1:23:42.12,1:23:44.92,Default,,0,0,0,,Được rồi, đếm đến 3 là nâng lên nhé.\N1, 2, 3.
Dialogue: 0,1:23:45.08,1:23:47.25,Default,,0,0,0,,Em và Kevin đang ở ngay đây mà, anh yêu.
Dialogue: 0,1:23:54.42,1:23:55.93,Default,,0,0,0,,Cứ để chúng tôi lo cho ông ấy.
Dialogue: 0,1:23:55.99,1:23:58.03,Default,,0,0,0,,Đừng lo thưa bà.\NÔng ấy sẽ ổn thôi.
Dialogue: 0,1:23:58.13,1:24:01.13,Default,,0,0,0,,Anh hãy cố lên!
Dialogue: 0,1:24:02.43,1:24:03.64,Default,,0,0,0,,Anh sẽ ổn thôi mà.
Dialogue: 0,1:24:06.77,1:24:08.44,Default,,0,0,0,,Anh sẽ không sao cả.
Dialogue: 0,1:24:09.94,1:24:11.82,Default,,0,0,0,,Và sau đó chúng ta sẽ về nhà.
Dialogue: 0,1:24:14.54,1:24:16.52,Default,,0,0,0,,Anh nghe em nói chứ?\NChúng ta sẽ về nhà.
